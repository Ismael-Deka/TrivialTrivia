<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ismaeldeka.TrivialTrivia.ui.TriviaQuestionFragment">
<LinearLayout
    android:id="@+id/question_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.)"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_alignParentEnd="true"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textSize="24sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question?"
        android:textSize="24dp"
        android:padding="16dp"
       />
    <RadioGroup
        android:id="@+id/multiple_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <RadioButton
            android:id="@+id/answer_button_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Answer 1"
            />
        <RadioButton
            android:id="@+id/answer_button_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Answer 2"
            />
        <RadioButton
            android:id="@+id/answer_button_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Answer 3"
            />
        <RadioButton
            android:id="@+id/answer_button_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Answer 4"
            />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/true_false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <RadioButton
            android:id="@+id/answer_button_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="True"
            android:textSize="16sp"
            />
        <RadioButton
            android:id="@+id/answer_button_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="False"
            android:textSize="16sp"
            />

    </RadioGroup>

    <Button
        android:id="@+id/button_next_question"
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No Internet Connection"
        android:textSize="16sp"
        android:visibility="gone"/>




</RelativeLayout>
